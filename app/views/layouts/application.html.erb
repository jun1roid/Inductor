<!DOCTYPE html>
<html>
  <head>
    <title>Inductor</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <body>
    <header>
      <nav class = "navbar navbar-dark bg-danger">
        <h1 class = "inductor_title">Inductor</h1>
        <div class = "space" style = "height: 30px;"></div>
        <% if user_signed_in? %>
        <%= link_to " ログアウト", destroy_user_session_path, method: :delete, class:"btn btn-light" %>
        <% end %>
      </nav>
    </header>
    <div class = "space" style = "height: 40px;"></div>
    <div class = "container-fluid">
      <div class = "row">
        <% if user_signed_in? %>
        <div class = "col-md-4">
          <div id="sidebar" class="col-sm-2 col-sm-offset-1 col-xs-2 col-xs-offset-1">
            <ul class="nav flex-column">
              <li class="nav-item">
                <%= link_to " Home", root_path, class:"" %>
              </li>
              <li class="nav-item">
                <%= link_to " Explore", users_path %>
              </li>
              <li class = "nav-item">
                <%= link_to " Profile", user_path(current_user.id) %>
              </li>
            </ul>
          </div>
        <% end %>
        </div>
        <%= yield %>
      </div>
    </div>
  </body>
</html>
