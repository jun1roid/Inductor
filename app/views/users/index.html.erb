<div class = "col-md-4">  
  <h1>全てのユーザー</h1>
  <% if user_signed_in? %>
    <% @users.each do |u| %>
    <p><%= attachment_image_tag u, :profile_image, format: 'jpeg', class:"attachment user profile_image", fallback: "no_image.jpg", size:"40x40" %>
    <a href="/users/<%= u.id %>"><%= u.name %></a></p>
    <hr>
    <% end %>
  <% else %>
    <%= link_to "ユーザーを登録する", new_user_registration_path %>
    <br>
    <%= link_to "ログインする", new_user_session_path %>
  <% end %>
</div>