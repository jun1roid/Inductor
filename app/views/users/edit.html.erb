<div class="col-md-8">
        <h2>User Edit</h2>
		<%= form_for(@user) do |f| %>
		<div class="field">
			<label for="user_name">表示名</label>
			<%= f.text_field :name %>
		</div>
		<div class="field">
			<label for="user_image">プロフィール画像</label>
			<%= f.attachment_field :profile_image %>
		</div>
        <div class="field">
			<label for="user_introduction">location：</label>
			<%= f.text_field :location, autofocus: true %>
		</div>
		<div class="field">
			<label for="user_introduction">About：</label>
			<%= f.text_field :about, autofocus: true %>
		</div>
		<div class="actions">
			<%= f.submit "Update" %>
		</div>
		<% end %>
</div>