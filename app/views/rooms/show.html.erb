<div class = "col-md-4"> 
    <h1>個別メッセージ</h1>

    <h4>参加者</h4>
    <% @entries.each do |e| %>
      <h5><strong><a href="/users/<%= e.user.id %>"><%= e.user.name %> さん</a></strong></h5>
    <% end %>

    <hr>
    <% if @messages.present? %>
      <% @messages.each do |m| %>
        <strong><%= m.content %></strong>
        <small>by <strong><a href="/users/<%= m.user_id %>"><%= m.user.name %> さん</a></strong></small>
        <hr>
      <% end %>
    <% else %>
      <h3 class="text-center">メッセージはまだありません</h3>
    <% end %>
 <div class = "jumbotron mt-4">
    <%= form_for @message do |f| %>
      <%= f.text_area :content, class:"form-control", :placeholder => "メッセージを入力して下さい" %>
      <%= f.hidden_field :room_id, :value => @room.id %>
      <br>
      <p class = "chatsubmit"><%= f.submit "投稿する" %></p>
    <% end %>
  </div>

    <p class = "backhome"><%= link_to "HOMEに戻る", root_path %></p>
</div>